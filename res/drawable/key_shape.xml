<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <gradient android:angle="45"
                android:startColor="#71FFFD"
                android:centerColor="#4DD3FF"
                android:endColor="#45ADE5"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="0dip" />
            <solid android:color="#2c82c9"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="10dp" />
            <gradient android:angle="45" android:startColor="#24252a" android:centerColor="#22313f" android:endColor="#2c3e50" />
        </shape>
    </item>
</selector>