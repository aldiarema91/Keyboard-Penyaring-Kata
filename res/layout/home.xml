<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="@drawable/bgt3">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_marginBottom="50dp"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:background="@drawable/logow"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:text="Keyboard Penyaring Kata"
                android:textColor="#fff"
                android:textSize="26dp"
                android:textAlignment="center"
                android:layout_marginBottom="30dp"/>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="30dp"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:background="@drawable/ic_keyboard_sehat"/>

            <Button
                android:id="@+id/btnProduk"
                android:text="Pemasangan"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:textSize="7pt"
                android:textColor="#282828"
                android:layout_height="wrap_content"
                android:background="@drawable/my_button"
                android:layout_marginBottom="20dp"/>
            <Button
                android:id="@+id/btnListData"
                android:text="Data Kata"
                android:background="@drawable/my_button"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:textSize="7pt"
                android:textColor="#282828"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"/>
            <Button
                android:id="@+id/btnAbout"
                android:text="Panduan"
                android:background="@drawable/my_button"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:textSize="7pt"
                android:textColor="#282828"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"/>

            <Button
                android:id="@+id/btnHelp"
                android:text="Bantuan"
                android:background="@drawable/my_button"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:textSize="7pt"
                android:textColor="#282828"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"/>

        </LinearLayout>

</LinearLayout>